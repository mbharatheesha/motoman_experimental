<?xml version="1.0"?>
<launch>
  <arg name="req_arg" value="default"/>
  <arg name="dx100" value="dx100"/>
  <arg name="fs100" value="fs100"/>

  <group ns="load_sia20">
    <include file="$(find motoman_sia_support)/launch/load_sia20.launch"/>
  </group>

  <group ns="test_sia20">
    <include file="$(find motoman_sia_support)/launch/test_sia20.launch"/>
  </group>

  <group ns="robot_interface_streaming_sia20">
    <group ns="dx100">
      <include file="$(find motoman_sia_support)/launch/robot_interface_streaming_sia20.launch.xml">
        <arg name="robot_ip"   value="$(arg req_arg)"/>
        <arg name="controller" value="$(arg dx100)"/>
      </include>
    </group>

    <group ns="fs100">
      <include file="$(find motoman_sia_support)/launch/robot_interface_streaming_sia20.launch.xml">
        <arg name="robot_ip"   value="$(arg req_arg)"/>
        <arg name="controller" value="$(arg fs100)"/>
      </include>
    </group>
  </group>

  <group ns="robot_state_visualize_sia20">
    <group ns="dx100">
      <include file="$(find motoman_sia_support)/launch/robot_state_visualize_sia20.launch.xml">
        <arg name="robot_ip"   value="$(arg req_arg)"/>
        <arg name="controller" value="$(arg dx100)"/>
      </include>
    </group>

    <group ns="fs100">
      <include file="$(find motoman_sia_support)/launch/robot_state_visualize_sia20.launch.xml">
        <arg name="robot_ip"   value="$(arg req_arg)"/>
        <arg name="controller" value="$(arg fs100)"/>
      </include>
    </group>
  </group>

  <group ns="robot_interface_streaming_sia20d">
    <include file="$(find motoman_sia_support)/launch/robot_interface_streaming_sia20d.launch">
      <arg name="robot_ip" value="$(arg req_arg)"/>
    </include>
  </group>

  <group ns="robot_interface_streaming_sia20f">
    <include file="$(find motoman_sia_support)/launch/robot_interface_streaming_sia20f.launch">
      <arg name="robot_ip" value="$(arg req_arg)"/>
    </include>
  </group>

  <group ns="robot_state_visualize_sia20d">
    <include file="$(find motoman_sia_support)/launch/robot_state_visualize_sia20d.launch">
      <arg name="robot_ip" value="$(arg req_arg)"/>
    </include>
  </group>

  <group ns="robot_state_visualize_sia20f">
    <include file="$(find motoman_sia_support)/launch/robot_state_visualize_sia20f.launch">
      <arg name="robot_ip" value="$(arg req_arg)"/>
    </include>
  </group>
</launch>
